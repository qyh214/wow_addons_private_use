<Frame name="wlDebugFrame" toplevel="true" frameStrata="DIALOG" movable="true" enableMouse="true" hidden="true" parent="UIParent" inherits="BackdropTemplate">
    <Size>
        <AbsDimension x="450" y="600" />
    </Size>
    <Anchors>
        <Anchor point="CENTER" />
    </Anchors>

    <!--
    <TitleRegion>
        <Size>
            <AbsDimension x="150" y="32" />
        </Size>
        <Anchors>
            <Anchor point="TOP">
                <Offset>
                    <AbsDimension x="0" y="12" />
                </Offset>
            </Anchor>
        </Anchors>
    </TitleRegion>
    -->

    <KeyValues>
        <KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" type="global"/>
    </KeyValues>

    <Layers>
        <Layer level="ARTWORK">
            <Texture file="Interface\DialogFrame\UI-DialogBox-Header">
                <Size>
                    <AbsDimension x="300" y="64" />
                </Size>
                <Anchors>
                    <Anchor point="TOP">
                        <Offset>
                            <AbsDimension x="0" y="12" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </Texture>

            <FontString inherits="GameFontNormal" text="WL_NAME">
                <Anchors>
                    <Anchor point="TOP">
                        <Offset>
                            <AbsDimension x="0" y="-2" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <Texture file="Interface\AddOns\+Wowhead_Looter\wowhead-logo-64.blp">
                <Anchors>
                    <Anchor point="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="20" y="-14" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </Texture>
        </Layer>
    </Layers>

    <Frames>
        <ScrollFrame name="wlTextScrollFrame" inherits="UIPanelScrollFrameTemplate">
            <Size>
                <AbsDimension x="384" y="510" />
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="23" y="-35" />
                    </Offset>
                </Anchor>
            </Anchors>

            <ScrollChild>
                <Frame name="wlTextChildFrame" enableMouse="true">
                    <Size>
                        <AbsDimension x="384" y="510" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0" />
                            </Offset>
                        </Anchor>
                    </Anchors>

                    <Frames>
                        <EditBox name="wlDebugEdit" enableMouse="true" multiline="true" autoFocus="false">
                            <Size>
                                <AbsDimension x="384" y="510" />
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="0" />
                                    </Offset>
                                </Anchor>
                            </Anchors>

                            <FontString inherits="ChatFontNormal" />

                            <Scripts>
                                <OnEscapePressed>
                                    wlDebugEdit:ClearFocus();
                                </OnEscapePressed>
                                <OnTextChanged>
                                    ScrollingEdit_OnTextChanged(self, wlTextScrollFrame);
                                </OnTextChanged>
                                <OnCursorChanged>
                                    ScrollingEdit_OnCursorChanged(self, x, y, w, h);
                                </OnCursorChanged>
                                <OnUpdate>
                                    ScrollingEdit_OnUpdate(self, elapsed, wlTextScrollFrame);
                                </OnUpdate>
                            </Scripts>

                        </EditBox>
                    </Frames>
                </Frame>
            </ScrollChild>
        </ScrollFrame>

        <Button inherits="UIPanelButtonTemplate" text="Clear">
            <Size>
                <AbsDimension x="75" y="25" />
            </Size>
            <Anchors>
                <Anchor point="BOTTOMRIGHT">
                    <Offset>
                        <AbsDimension x="-105" y="20" />
                    </Offset>
                </Anchor>
            </Anchors>
            <Scripts>
                <OnClick>
                    wlDebugEdit:SetText("");
                </OnClick>
            </Scripts>
        </Button>

        <Button inherits="UIPanelButtonTemplate" text="Close">
            <Size>
                <AbsDimension x="75" y="25" />
            </Size>
            <Anchors>
                <Anchor point="BOTTOMRIGHT">
                    <Offset>
                        <AbsDimension x="-20" y="20" />
                    </Offset>
                </Anchor>
            </Anchors>
            <Scripts>
                <OnClick>
                    self:GetParent():Hide();
                </OnClick>
            </Scripts>
        </Button>

    </Frames>

    <Scripts>
        <OnShow>
            wlDebugEdit:ClearFocus();
        </OnShow>
    </Scripts>
</Frame>


