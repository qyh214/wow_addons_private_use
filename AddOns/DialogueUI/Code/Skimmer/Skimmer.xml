<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\Blizzard_SharedXML\UI.xsd">
    <Script file="Skimmer_Base.lua"/>
    <Script file="Skimmer_Template.lua"/>
    <Script file="Skimmer_UI.lua"/>


    <Frame name="DUISkimmerOptionTemplate" mixin="DUISkimmerOptionMixin" virtual="true">
        <Size x="256" y="48"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Title" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP" maxLines="1">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="8" y="-8"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Desc" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP" spacing="2">
                    <Size x="256" y="0"/>
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-4"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="TestRewardDisplay" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP" spacing="0">
                    <Color r="1" g="1" b="1"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Desc" relativePoint="BOTTOMLEFT" x="0" y="-4"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>