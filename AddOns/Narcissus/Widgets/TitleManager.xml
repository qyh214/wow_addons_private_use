                    </Button>
                    <ScrollFrame name="Narci_TitleManager_ListScrollFrame" parentKey="ListScrollFrame">
                        <Size x="196" y="320"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="-21"/>
                        </Anchors>
                        <ScrollChild>
                            <Frame name="$parentScrollChild" parentKey="scrollChild">
