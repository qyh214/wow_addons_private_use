                                        <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                                    </Anchors>
                                    <Gradient orientation="VERTICAL">
                                        <MinColor a="0" r="0.0" g="0.0" b="0.0"/>
