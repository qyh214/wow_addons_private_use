                <HitRectInsets>
                    <AbsInset left="-4" right="-4" top="-4" bottom="-4"/>
                </HitRectInsets>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" X="-10"/>
                </Anchors>
                <Layers>
                    <Layer level="ART">
                        <Texture parentKey="Icon">
                            <TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92"/>
